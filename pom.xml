    <modelVersion>4.0.0</modelVersion>

    <groupId>com.fulcrologic</groupId>
    <artifactId>fulcro</artifactId>
    <packaging>jar</packaging>
    <version>3.0.0-alpha-16</version>

    <name>fulcro</name>
    <description>A library for building full-stack SPA webapps in Clojure and Clojurescript</description>
    <url>https://github.com/fulcrologic/fulcro</url>

    <licenses>
        <license>
            <name>MIT</name>
            <url>https://opensource.org/licenses/MIT</url>
        </license>
    </licenses>

    <scm>
        <url>https://github.com/fulcrologic/fulcro3</url>
        <connection>scm:git:git://github.com/fulcrologic/fulcro3.git</connection>
        <developerConnection>scm:git:ssh://git@github.com/fulcrologic/fulcro3.git</developerConnection>
        <tag>9e75c6dd6b2346aefb12ba5c40affa051543e9f3</tag>
    </scm>

    <distributionManagement>
        <repository>
            <id>clojars</id>
            <name>Clojars repository</name>
            <url>https://clojars.org/repo</url>
        </repository>
    </distributionManagement>

    <build>
        <sourceDirectory>src/main</sourceDirectory>

        <resources>
            <resource>
                <directory>src/main</directory>
            </resource>
        </resources>
    </build>

    <repositories>
        <repository>
            <id>clojars</id>
            <url>https://repo.clojars.org/</url>
        </repository>
        <repository>
            <id>sonatype</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>org.clojure</groupId>
